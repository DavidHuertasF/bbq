<%= image_tag user_avatar(@user) %>

<div class="text-center">
  <h1><%= @user.name %></h1>

  <% if @user == current_user %>
    <p class="buffer-top">
      <%= link_to "Edit profile", edit_user_path(@user),
                  class: 'btn btn-default' %>
    </p>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3>Organized:</h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="buffer-top">User has not organized an event yet</p>
    <% end %>
  </div>
</div>
