<span class="user">
  <span class="user-avatar">
    <% if user.avatar.attached? %>
    <%= image_tag user.avatar.variant(:thumb), class: 'user-avatar img-icon' %>
  <% else %>
    <%= image_tag user_avatar(user), class: 'user-avatar img-icon' %>
  <% end %>
  </span>
  <span class="user-name">
    <% if request.path == user_path(user) %>
      <%= user.name %>
    <% else %>
      <%= link_to user.name, user_path(user) %>
    <% end %>
  </span>
</span>
